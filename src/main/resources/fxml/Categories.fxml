<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="687.0" prefWidth="1011.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stationeryshop.controller.CategoriesController">
    <children>
        <!-- Header Section -->
        <VBox spacing="10.0" style="-fx-background-color: #F8F9FA;">
            <padding>
                <Insets bottom="20.0" left="50.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #E53E3E;" text="Categories" />
            </children>
        </VBox>

        <!-- Categories Grid Section -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED">
            <content>
                <VBox spacing="20.0">
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="20.0" />
                    </padding>
                    <children>
                        <!-- Categories Tags -->
                        <FlowPane fx:id="categoriesFlowPane" hgap="15.0" prefWrapLength="800.0" style="-fx-background-color: transparent;" vgap="15.0">
                        </FlowPane>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
