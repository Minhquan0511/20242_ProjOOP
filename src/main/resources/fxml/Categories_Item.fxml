<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="categoryCard" styleClass="category-card" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Category Name -->
        <Label fx:id="categoryName" text="Category Name" styleClass="category-name" wrapText="true">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <!-- Category Description -->
        <Label fx:id="categoryDescription" text="Category description goes here. This provides more details about what products are included in this category." styleClass="category-description" wrapText="true">
            <font>
                <Font size="13.0" />
            </font>
            <VBox.margin>
                <Insets top="8.0" />
            </VBox.margin>
        </Label>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>