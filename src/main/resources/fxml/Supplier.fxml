<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="980.0" prefWidth="1362.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stationeryshop.controller.SupplierController">
    <top>
        <!-- Header Section -->
        <VBox spacing="20.0" style="-fx-background-color: #ffffff; -fx-padding: 30 30 20 30;">
           <children>
               <HBox alignment="CENTER_LEFT" spacing="15.0">
                  <children>
                      <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Suppliers">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                      <Region HBox.hgrow="ALWAYS" />
                  </children>
               </HBox>
   
               <!-- Search Bar -->
               <HBox alignment="CENTER_LEFT" spacing="15.0">
      <children>
                      <TextField fx:id="txtSearch" onKeyReleased="#handleSearch" promptText="Tìm kiếm theo tên, email hoặc số điện thoại..." style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-pref-width: 350;" />
                  <Button fx:id="supplierSearchBtn" onAction="#handleSearchSupplier" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 24; -fx-background-radius: 8; -fx-cursor: hand;" text="Search">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Region prefHeight="46.0" prefWidth="261.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="addSupplierBtn" onAction="#handleAddSupplier" prefHeight="51.0" prefWidth="186.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 17px; -fx-font-weight: bold; -fx-padding: 12 24; -fx-background-radius: 8; -fx-cursor: hand;" text="+ New Supplier">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
      </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
               </HBox>
           </children>
        </VBox>
    </top>

    <center>
        <HBox spacing="20.0" style="-fx-padding: 0 30 30 30; -fx-background-color: #f8f9fa;">
           <children>
   
               <!-- Left Side - Supplier Table -->
               <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, #00000020, 10, 0, 0, 2); -fx-padding: 25;" HBox.hgrow="ALWAYS">
      <children>
                      <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Suppliers Table" />
      
                      <TableView fx:id="tableSuppliers" onMouseClicked="#handleTableClick" style="-fx-background-color: transparent; -fx-table-cell-border-color: #e9ecef;" VBox.vgrow="ALWAYS">
                          <columns>
                              <TableColumn fx:id="colId" prefWidth="60.0" style="-fx-alignment: CENTER;" text="ID" />
                              <TableColumn fx:id="colName" prefWidth="162.0" text="Name" />
                              <TableColumn fx:id="colContactPerson" prefWidth="154.0" text="Contact Person" />
                              <TableColumn fx:id="colEmail" prefWidth="157.0" text="Email" />
                              <TableColumn fx:id="colPhone" prefWidth="146.0" text="Phone" />
                              <TableColumn fx:id="colAddress" prefWidth="151.0" text="Address" />
                          </columns>
                          <placeholder>
                              <Label style="-fx-text-fill: #6c757d; -fx-font-size: 16px;" text="Không có dữ liệu nhà cung cấp" />
                          </placeholder>
                      </TableView>
      </children>
               </VBox>
   
               <!-- Right Side - Supplier Details -->
               <VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, #00000020, 10, 0, 0, 2); -fx-padding: 25; -fx-pref-width: 400; -fx-min-width: 400;">
      <children>
      
                      <!-- Form Header -->
                      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
                             <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Suppier's Information" />
                             <Region HBox.hgrow="ALWAYS" />
         </children>
                      </HBox>
      
                      <Separator style="-fx-background-color: #e9ecef;" />
      
                      <!-- Form Fields -->
                      <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
         <content>
                             <VBox spacing="20.0" style="-fx-padding: 5;">
                                <children>
            
                                    <!-- Supplier ID (Read-only) -->
                                    <VBox spacing="8.0">
               <children>
                                           <Label style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 15px;" text="Suppier's ID" />
                                           <TextField fx:id="txtSupplierId" editable="false" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-text-fill: #6c757d;" />
               </children>
                                    </VBox>
            
                                    <!-- Supplier Name -->
                                    <VBox spacing="8.0">
               <children>
                                           <Label style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 15px;" text="Name" />
                                           <TextField fx:id="txtSupplierName" style="-fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" />
               </children>
                                    </VBox>
            
                                    <!-- Contact Person -->
                                    <VBox spacing="8.0">
               <children>
                                           <Label style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 15px;" text="Contact Person" />
                                           <TextField fx:id="txtContactPerson" style="-fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" />
               </children>
                                    </VBox>
            
                                    <!-- Email -->
                                    <VBox spacing="8.0">
               <children>
                                           <Label style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 15px;" text="Email" />
                                           <TextField fx:id="txtEmail" style="-fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" />
               </children>
                                    </VBox>
            
                                    <!-- Phone -->
                                    <VBox spacing="8.0">
               <children>
                                           <Label style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 15px;" text="Phone Number" />
                                           <TextField fx:id="txtPhone" style="-fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" />
               </children>
                                    </VBox>
            
                                    <!-- Address -->
                                    <VBox spacing="8.0">
               <children>
                                           <Label style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 15px;" text="Address" />
                                    <TextField fx:id="txtAddress" style="-fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" />
               </children>
                                    </VBox>
                                </children>
         
                             </VBox>
         </content>
                      </ScrollPane>
      
                      <Separator style="-fx-background-color: #e9ecef;" />
      
                      <!-- Action Buttons -->
                      <HBox alignment="CENTER" spacing="50.0">
         <children>
                             <Button fx:id="editBtn" onAction="#handleEditSupplier" prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-size: 17px; -fx-font-weight: bold; -fx-padding: 12 24; -fx-background-radius: 8; -fx-cursor: hand;" text="Sửa" />
                             <Button fx:id="deleteBtn" onAction="#handleDeleteSupplier" prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 17px; -fx-font-weight: bold; -fx-padding: 12 24; -fx-background-radius: 8; -fx-cursor: hand;" text="Xóa" />
         </children>
                      </HBox>
      
                      <!-- Required Fields Note -->
                      <Label style="-fx-text-fill: #6c757d; -fx-font-size: 12px; -fx-font-style: italic;" text="* Các trường bắt buộc" />
      </children>
   
               </VBox>
           </children>

        </HBox>
    </center>
</BorderPane>
