<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="781.0" prefWidth="1169.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stationeryshop.controller.HistoryController">
    <top>
        <!-- Header Section -->
        <VBox spacing="20.0" style="-fx-background-color: #ffffff; -fx-padding: 30 30 20 30;">
           <children>
               <HBox alignment="CENTER_LEFT" spacing="15.0">
                  <children>
                      <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Order History" />
                      <Region HBox.hgrow="ALWAYS" />
                  </children>
               </HBox>
           </children>

        </VBox>
    </top>

    <center>
        <VBox spacing="20.0" style="-fx-padding: 0 30 30 30; -fx-background-color: #f8f9fa;">
           <children>
   
               <!-- Orders List Container -->
               <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, #00000020, 10, 0, 0, 2); -fx-padding: 25;" VBox.vgrow="ALWAYS">
      <children>
      
                      <!-- List Header -->
                      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
                             <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Order List" />
                             <Region HBox.hgrow="ALWAYS" />
                             <Label fx:id="lblOrderCount" style="-fx-background-color: #e3f2fd; -fx-text-fill: #1976d2; -fx-padding: 8 16; -fx-background-radius: 20; -fx-font-size: 14px; -fx-font-weight: bold;" text="Count: 0 Order" />
         </children>
                      </HBox>
      
                      <Separator style="-fx-background-color: #e9ecef;" />
      
                      <!-- Orders ScrollPane -->
                      <ScrollPane fx:id="scrollOrders" fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;" VBox.vgrow="ALWAYS">
         <content>
                             <VBox fx:id="odersListBox" spacing="12.0" style="-fx-padding: 5;" />
         </content>
                      </ScrollPane>
      </children>
   
               </VBox>
   
               <!-- Summary Statistics -->
               <HBox spacing="20.0">
      <children>

          <!-- Total Orders Card -->
          <VBox alignment="CENTER" spacing="10.0"
                style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #ff7e5f 0%, #feb47b 100%);
             -fx-background-radius: 12;
             -fx-padding: 25;
             -fx-effect: dropshadow(gaussian, #00000030, 15, 0, 0, 5);"
                HBox.hgrow="ALWAYS">
              <children>
                  <Label style="-fx-font-size: 18px; -fx-text-fill: rgba(255,255,255,0.9); -fx-font-weight: bold;" text="Total Count" />
                  <Label fx:id="totalOrdersCountLbl" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;" text="0" />
                  <Label style="-fx-font-size: 15px; -fx-text-fill: rgba(255,255,255,0.8);" text="orders completed" />
              </children>
          </VBox>

          <!-- Total Spent Card -->
          <VBox alignment="CENTER" spacing="10.0"
                style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #ff512f 0%, #dd2476 100%);
             -fx-background-radius: 12;
             -fx-padding: 25;
             -fx-effect: dropshadow(gaussian, #00000030, 15, 0, 0, 5);"
                HBox.hgrow="ALWAYS">
              <children>
                  <Label style="-fx-font-size: 18px; -fx-text-fill: rgba(255,255,255,0.9); -fx-font-weight: bold;" text="Total Spent Amount" />
                  <Label fx:id="totalSpentLbl" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;" text="0â‚«" />
                  <Label style="-fx-font-size: 15px; -fx-text-fill: rgba(255,255,255,0.8);" text="has been spent" />
              </children>
          </VBox>

      </children>
   
               </HBox>
           </children>

        </VBox>
    </center>
</BorderPane>
