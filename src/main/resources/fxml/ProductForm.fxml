<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>

<BorderPane prefWidth="1366" prefHeight="768" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stationeryshop.controller.inventory.ProductController">

    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <!-- Header -->
                <HBox alignment="CENTER" prefHeight="35.0" prefWidth="1200.0" style="-fx-background-color: #ecf0f0;" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="INVENTORY MANAGEMENT" textFill="#a14b23">
                            <font>
                                <Font name="Georgia Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                    </padding>
                </HBox>
                <!-- Search Bar -->
                <HBox alignment="CENTER_LEFT" prefHeight="38.0" prefWidth="1200.0" spacing="8.0" style="-fx-background-color: #ecf0f1;">
                    <children>
                        <Label text="Search Product:" />
                        <TextField fx:id="searchField" prefWidth="250.0" promptText="Nhập tên sản phẩm..." />
                        <Button fx:id="searchBtn" onAction="#handleSearch" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Search" />
                        <Button fx:id="refreshBtn" onAction="#handleRefresh" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Refresh" />
                    </children>
                    <padding>
                        <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <TabPane prefHeight="700.0" prefWidth="1200.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <!-- Tab Sản phẩm -->
                <Tab text="Sản phẩm">
                    <content>
                        <fx:include source="InventoryProductTab.fxml" />
                    </content>
                </Tab>
                <!-- Tab quản lý danh mục -->
                <Tab text="Danh mục">
                    <content>
                        <fx:include source="InventoryCategoryTab.fxml" />
                    </content>
                </Tab>
                <!-- Tab quản lý tồn kho -->
                <Tab text="Tồn kho">
                    <content>
                        <fx:include source="InventoryTab.fxml" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <padding>
        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
    </padding>
</BorderPane>